# Environment Variables
# Copy this file to .env and update values

# API Configuration
# Đặt IP máy chạy server backend (xem INTEGRATION.md để biết thêm chi tiết)
EXPO_PUBLIC_API_HOST=192.168.10.126
EXPO_PUBLIC_API_PORT=3000

# Hoặc sử dụng full URL:
# EXPO_PUBLIC_API_URL=http://192.168.10.126:3000/v1
# EXPO_PUBLIC_WS_URL=http://192.168.10.126:3000

# Production values (example) - Socket.IO uses https, not wss
# EXPO_PUBLIC_API_URL=https://api.goldprice.app/v1
# EXPO_PUBLIC_WS_URL=https://api.goldprice.app

# Debug Mode
EXPO_PUBLIC_DEBUG=false

# Cache Duration (milliseconds)
EXPO_PUBLIC_CACHE_DURATION=30000

# Widget Refresh Interval (seconds)
EXPO_PUBLIC_WIDGET_REFRESH_INTERVAL=900
